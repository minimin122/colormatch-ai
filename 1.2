                                updateStatus('âŒ ì¹´ë©”ë¼ ì ‘ê·¼ì´ ê±°ë¶€ë˜ì—ˆìŠµë‹ˆë‹¤.', 'error');
                            }
                        },
                        onCameraPermissionAsked: () => {
