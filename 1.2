        // DeepAR ëª¨ë“œ ì´ˆê¸°í™”
        async function initializeDeepAR() {
            try {
                // DeepAR ë¼ì´ë¸ŒëŸ¬ë¦¬ ë¡œë”© í™•ì¸
                if (typeof DeepAR === 'undefined') {
                    updateStatus('â³ DeepAR ë¼ì´ë¸ŒëŸ¬ë¦¬ ë¡œë”© ì¤‘...', 'normal');
                    
                    // ìµœëŒ€ 10ì´ˆ ëŒ€ê¸°
                    for (let i = 0; i < 20; i++) {
                        await new Promise(resolve => setTimeout(resolve, 500));
                        if (typeof DeepAR !== 'undefined') break;
                        updateStatus(`â³ DeepAR ë¡œë”© ì¤‘... (${i + 1}/20)`, 'normal');
                    }
                    
                    if (typeof DeepAR === 'undefined') {
                        throw new Error('DeepAR ë¼ì´ë¸ŒëŸ¬ë¦¬ë¥¼ ë¡œë“œí•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤. ì¸í„°ë„· ì—°ê²°ì„ í™•ì¸í•´ì£¼ì„¸ìš”.');
                    }
                }

                updateStatus('ğŸ”‘ DeepAR API í‚¤ í™•ì¸ ì¤‘...', 'normal');
                
                // API í‚¤ í™•ì¸
                if (!DEEPAR_API_KEY || DEEPAR_API_KEY.length < 50) {
                    throw new Error('DeepAR API í‚¤ê°€ ì˜¬ë°”ë¥´ì§€ ì•ŠìŠµë‹ˆë‹¤.');
                }

                video = document.getElementById('video');
                canvas = document.getElementById('canvas');
                
                updateStatus('ğŸš€ DeepAR ì—”ì§„ ì´ˆê¸°í™” ì¤‘...', 'normal');

                // DeepAR ì´ˆê¸°í™”
                deepAR = new DeepAR({
                    licenseKey: DEEPAR_API_KEY,
                    canvas: canvas,
                    deeparWasmPath: 'https://cdn.deepar.ai/js/',
                    callbacks: {
                        onInitialize: async () => {
                            console.log('âœ… DeepAR ì´ˆê¸°í™” ì™„ë£Œ');
                            updateStatus('ğŸ“¹ ì¹´ë©”ë¼ ì‹œì‘ ì¤‘...', 'normal');
                            
