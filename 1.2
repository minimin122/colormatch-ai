    <script>
        // DeepAR API ÌÇ§
        const DEEPAR_API_KEY = "7bb30619efaec420030f0ec0f7b6f9eef443a9b76379ab67288e83a4b7cb23362ae102a85f5cfb8af";
        
        // Ï†ÑÏó≠ Î≥ÄÏàò
        let video = null;
        let canvas = null;
        let ctx = null;
        let isRunning = false;
        let currentMode = 'basic'; // 'basic' ÎòêÎäî 'deepar'
        let deepAR = null;
        let currentLipColor = [199, 92, 92];
        let currentBlushColor = [255, 127, 80];
        let lipIntensity = 0.6;
        let blushIntensity = 0.4;

        // Ïï± ÏãúÏûë
        async function startApp(mode = 'basic') {
            try {
                currentMode = mode;
                document.getElementById('homeScreen').style.display = 'none';
                document.getElementById('makeupApp').classList.add('active');
                
                if (mode === 'deepar') {
                    updateStatus('üöÄ DeepAR ÌîÑÎ¶¨ÎØ∏ÏóÑ Î™®ÎìúÎ°ú Ï¥àÍ∏∞Ìôî Ï§ë...', 'normal');
                    await initializeDeepAR();
                } else {
                    updateStatus('Ïπ¥Î©îÎùº Í∂åÌïúÏùÑ ÏöîÏ≤≠ÌïòÍ≥† ÏûàÏäµÎãàÎã§...', 'normal');
                    await initializeBasicMode();
                }
                
            } catch (error) {
                console.error('Ïï± ÏãúÏûë Ïò§Î•ò:', error);
                updateStatus('‚ùå Ï¥àÍ∏∞ÌôîÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§: ' + error.message, 'error');
            }
        }

        // Í∏∞Î≥∏ Î™®Îìú Ï¥àÍ∏∞Ìôî
        async function initializeBasicMode() {
            // Ïπ¥Î©îÎùº Ï¥àÍ∏∞Ìôî
            video = document.getElementById('video');
            canvas = document.getElementById('canvas');
            ctx = canvas.getContext('2d');
            
            // Ïπ¥Î©îÎùº Ïä§Ìä∏Î¶º ÏöîÏ≤≠
            const stream = await navigator.mediaDevices.getUserMedia({ 
                video: { width: 640, height: 480 } 
            });
            
            video.srcObject = stream;
            
            // ÎπÑÎîîÏò§ Î°úÎìú ÎåÄÍ∏∞
            await new Promise((resolve) => {
                video.onloadedmetadata = () => {
                    video.play();
                    resolve();
                };
            });
            
            // Ï∫îÎ≤ÑÏä§ ÌÅ¨Í∏∞ ÏÑ§Ï†ï
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            
            // Ïª®Ìä∏Î°§ Ïù¥Î≤§Ìä∏ ÏÑ§Ï†ï
            setupControls();
            
            // Î©îÏù¥ÌÅ¨ÏóÖ Î£®ÌîÑ ÏãúÏûë
            isRunning = true;
            updateStatus('‚ú® Í∏∞Î≥∏ Î™®Îìú Ï§ÄÎπÑ ÏôÑÎ£å! Ïª¨Îü¨Î•º ÏÑ†ÌÉùÌï¥Î≥¥ÏÑ∏Ïöî', 'success');
            drawLoop();
        }

        // DeepAR Î™®Îìú Ï¥àÍ∏∞Ìôî
        async function initializeDeepAR() {
            try {
                // DeepAR ÎùºÏù¥Î∏åÎü¨Î¶¨ Î°úÎî© ÌôïÏù∏
                if (typeof DeepAR === 'undefined') {
                    updateStatus('‚è≥ DeepAR ÎùºÏù¥Î∏åÎü¨Î¶¨ Î°úÎî© Ï§ë...', 'normal');
                    
                    // ÏµúÎåÄ 10Ï¥à ÎåÄÍ∏∞
                    for (let i = 0; i < 20; i++) {
                        await new Promise(resolve => setTimeout(resolve, 500));
                        if (typeof DeepAR !== 'undefined') break;
                        updateStatus(`‚è≥ DeepAR Î°úÎî© Ï§ë... (${i + 1}/20)`, 'normal');
                    }
                    
                    if (typeof DeepAR === 'undefined') {
                        throw new Error('DeepAR ÎùºÏù¥Î∏åÎü¨Î¶¨Î•º Î°úÎìúÌï† Ïàò ÏóÜÏäµÎãàÎã§. Ïù∏ÌÑ∞ÎÑ∑ Ïó∞Í≤∞ÏùÑ ÌôïÏù∏Ìï¥Ï£ºÏÑ∏Ïöî.');
                    }
                }

                updateStatus('üîë DeepAR API ÌÇ§ ÌôïÏù∏ Ï§ë...', 'normal');
                
                // API ÌÇ§ ÌôïÏù∏
                if (!DEEPAR_API_KEY || DEEPAR_API_KEY.length < 50) {
                    throw new Error('DeepAR API ÌÇ§Í∞Ä Ïò¨Î∞îÎ•¥ÏßÄ ÏïäÏäµÎãàÎã§.');
                }

                video = document.getElementById('video');
                canvas = document.getElementById('canvas');
                
                updateStatus('üöÄ DeepAR ÏóîÏßÑ Ï¥àÍ∏∞Ìôî Ï§ë...', 'normal');

                // DeepAR Ï¥àÍ∏∞Ìôî
                deepAR = new DeepAR({
                    licenseKey: DEEPAR_API_KEY,
                    canvas: canvas,
                    deeparWasmPath: 'https://cdn.deepar.ai/js/',
                    callbacks: {
                        onInitialize: async () => {
                            console.log('‚úÖ DeepAR Ï¥àÍ∏∞Ìôî ÏôÑÎ£å');
                            updateStatus('üìπ Ïπ¥Î©îÎùº ÏãúÏûë Ï§ë...', 'normal');
                            
                            try {
                                await deepAR.startCamera(true);
                                setupControls();
                                isRunning = true;
                                updateStatus('‚ú® DeepAR ÌîÑÎ¶¨ÎØ∏ÏóÑ Î™®Îìú Ï§ÄÎπÑ ÏôÑÎ£å!', 'success');
                            } catch (cameraError) {
                                console.error('DeepAR Ïπ¥Î©îÎùº Ïò§Î•ò:', cameraError);
                                updateStatus('‚ùå Ïπ¥Î©îÎùº Ï†ëÍ∑ºÏù¥ Í±∞Î∂ÄÎêòÏóàÏäµÎãàÎã§.', 'error');
                            }
                        },
                        onCameraPermissionAsked: () => {
                            updateStatus('üìπ Ïπ¥Î©îÎùº Í∂åÌïúÏùÑ ÌóàÏö©Ìï¥Ï£ºÏÑ∏Ïöî', 'normal');
                        },
                        onCameraPermissionGranted: () => {
                            updateStatus('‚úÖ Ïπ¥Î©îÎùº Í∂åÌïúÏù¥ ÌóàÏö©ÎêòÏóàÏäµÎãàÎã§', 'success');
                        },
                        onCameraPermissionDenied: () => {
                            updateStatus('‚ùå Ïπ¥Î©îÎùº Í∂åÌïúÏù¥ Í±∞Î∂ÄÎêòÏóàÏäµÎãàÎã§', 'error');
                        },
                        onFaceVisibilityChanged: (visible) => {
                            if (visible) {
                                updateStatus('üë§ ÏñºÍµ¥Ïù¥ Í∞êÏßÄÎêòÏóàÏäµÎãàÎã§! DeepAR Ï∂îÏ†Å ÌôúÏÑ±Ìôî', 'success');
                            } else {
                                updateStatus('ÏñºÍµ¥ÏùÑ ÌôîÎ©¥ Ï§ëÏïôÏóê ÎßûÏ∂∞Ï£ºÏÑ∏Ïöî', 'normal');
                            }
                        },
                        onError: (error) => {
                            console.error('DeepAR Ïò§Î•ò:', error);
                            updateStatus(`‚ùå DeepAR Ïò§Î•ò: ${error.toString()}`, 'error');
                        }
                    }
                });

            } catch (error) {
                console.error('DeepAR Ï¥àÍ∏∞Ìôî Ïò§Î•ò:', error);
                updateStatus(`‚ùå DeepAR Ï¥àÍ∏∞Ìôî Ïã§Ìå®: ${error.message}`, 'error');
                
                // Í∏∞Î≥∏ Î™®ÎìúÎ°ú Ìè¥Î∞±
                setTimeout(async () => {
                    updateStatus('üîÑ Í∏∞Î≥∏ Î™®ÎìúÎ°ú Ï†ÑÌôò Ï§ë...', 'normal');
                    currentMode = 'basic';
                    await initializeBasicMode();
                }, 3000);
            }
        }

        // Î©îÏù¥ÌÅ¨ÏóÖ Í∑∏Î¶¨Í∏∞ Î£®ÌîÑ (Í∏∞Î≥∏ Î™®ÎìúÏö©)
        function drawLoop() {
            if (!isRunning || currentMode !== 'basic') return;
            
            // Ï∫îÎ≤ÑÏä§ ÌÅ¥Î¶¨Ïñ¥
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Í∞ÑÎã®Ìïú Î©îÏù¥ÌÅ¨ÏóÖ Ìö®Í≥º (ÌôîÎ©¥ Ï§ëÏïôÏóê)
            const centerX = canvas.width / 2;
            const centerY = canvas.height / 2;
            
            // Î¶ΩÏä§Ìã± ÏòÅÏó≠
            if (lipIntensity > 0) {
                ctx.save();
                ctx.globalAlpha = lipIntensity;
                ctx.fillStyle = `rgb(${currentLipColor[0]}, ${currentLipColor[1]}, ${currentLipColor[2]})`;
                ctx.beginPath();
                ctx.ellipse(centerX, centerY + 60, 40, 20, 0, 0, 2 * Math.PI);
                ctx.fill();
                ctx.restore();
            }
            
            // Î∏îÎü¨ÏÖî ÏòÅÏó≠
            if (blushIntensity > 0) {
                ctx.save();
                ctx.globalAlpha = blushIntensity * 0.6;
                
                const gradient1 = ctx.createRadialGradient(centerX - 100, centerY - 20, 0, centerX - 100, centerY - 20, 35);
                gradient1.addColorStop(0, `rgba(${currentBlushColor[0]}, ${currentBlushColor[1]}, ${currentBlushColor[2]}, 0.8)`);
                gradient1.addColorStop(1, `rgba(${currentBlushColor[0]}, ${currentBlushColor[1]}, ${currentBlushColor[2]}, 0)`);
                
                const gradient2 = ctx.createRadialGradient(centerX + 100, centerY - 20, 0, centerX + 100, centerY - 20, 35);
                gradient2.addColorStop(0, `rgba(${currentBlushColor[0]}, ${currentBlushColor[1]}, ${currentBlushColor[2]}, 0.8)`);
                gradient2.addColorStop(1, `rgba(${currentBlushColor[0]}, ${currentBlushColor[1]}, ${currentBlushColor[2]}, 0)`);
                
                // ÏôºÏ™Ω Î≥º
                ctx.fillStyle = gradient1;
                ctx.beginPath();
                ctx.arc(centerX - 100, centerY - 20, 35, 0, 2 * Math.PI);
                ctx.fill();
                
                // Ïò§Î•∏Ï™Ω Î≥º
                ctx.fillStyle = gradient2;
                ctx.beginPath();
                ctx.arc(centerX + 100, centerY - 20, 35, 0, 2 * Math.PI);
                ctx.fill();
                
                ctx.restore();
            }
            
            requestAnimationFrame(drawLoop);
        }

        // Ïª®Ìä∏Î°§ ÏÑ§Ï†ï
        function setupControls() {
            // Î¶ΩÏä§Ìã± Ïª¨Îü¨ ÏÑ†ÌÉù
            document.querySelectorAll('#lipColors .color-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('#lipColors .color-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    currentLipColor = this.dataset.color.split(',').map(Number);
                });
            });

            // Î∏îÎü¨ÏÖî Ïª¨Îü¨ ÏÑ†ÌÉù
            document.querySelectorAll('#blushColors .color-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('#blushColors .color-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    currentBlushColor = this.dataset.color.split(',').map(Number);
                });
            });

            // Ïä¨ÎùºÏù¥Îçî
            document.getElementById('lipIntensity').addEventListener('input', function() {
                lipIntensity = parseFloat(this.value);
            });

            document.getElementById('blushIntensity').addEventListener('input', function() {
                blushIntensity = parseFloat(this.value);
            });
        }

        // ÏÉÅÌÉú ÏóÖÎç∞Ïù¥Ìä∏
        function updateStatus(message, type = 'normal') {
            const status = document.getElementById('status');
            status.textContent = message;
            status.className = 'status';
            if (type !== 'normal') {
                status.classList.add(type);
            }
        }

        // ÏÇ¨ÏßÑ Ï∫°Ï≤ò
        function capturePhoto() {
            if (currentMode === 'deepar' && deepAR) {
                // DeepAR Ï∫°Ï≤ò
                deepAR.takeScreenshot().then(function(screenshot) {
                    const a = document.createElement('a');
                    a.href = screenshot;
                    a.download = `deepar-makeup-${Date.now()}.png`;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    
                    updateStatus('üì∏ DeepAR ÏÇ¨ÏßÑÏù¥ Ï†ÄÏû•ÎêòÏóàÏäµÎãàÎã§!', 'success');
                    setTimeout(() => updateStatus('‚ú® DeepAR ÌîÑÎ¶¨ÎØ∏ÏóÑ Î™®Îìú Ï§ÄÎπÑ ÏôÑÎ£å!', 'success'), 2000);
                });
            } else {
                // Í∏∞Î≥∏ Î™®Îìú Ï∫°Ï≤ò
                const tempCanvas = document.createElement('canvas');
                const tempCtx = tempCanvas.getContext('2d');
                
                tempCanvas.width = video.videoWidth;
                tempCanvas.height = video.videoHeight;
                
                // ÎπÑÎîîÏò§ Ïù¥ÎØ∏ÏßÄ Í∑∏Î¶¨Í∏∞ (ÎØ∏Îü¨ Ìö®Í≥º)
                tempCtx.save();
                tempCtx.scale(-1, 1);
                tempCtx.drawImage(video, -tempCanvas.width, 0, tempCanvas.width, tempCanvas.height);
                tempCtx.restore();
                
                // Î©îÏù¥ÌÅ¨ÏóÖ Ìö®Í≥º Ï∂îÍ∞Ä
                tempCtx.drawImage(canvas, 0, 0);
                
                // Îã§Ïö¥Î°úÎìú
                tempCanvas.toBlob(function(blob) {
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = `basic-makeup-${Date.now()}.png`;
                    document.body.appendChild(a);
