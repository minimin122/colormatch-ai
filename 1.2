                            updateStatus(`âŒ DeepAR ì˜¤ë¥˜: ${error.toString()}`, 'error');
                        }
                    }
                });

            } catch (error) {
                console.error('DeepAR ì´ˆê¸°í™” ì˜¤ë¥˜:', error);
                updateStatus(`âŒ DeepAR ì´ˆê¸°í™” ì‹¤íŒ¨: ${error.message}`, 'error');
                
